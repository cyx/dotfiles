#!/bin/bash

# VIM FILES
ln -vfs ~/.dotfiles/vim ~/.vim
ln -vfs ~/.dotfiles/vim/vimrc ~/.vimrc
ln -vfs ~/.dotfiles/vim/gvimrc ~/.gvimrc

# GEMRC
ln -vfs ~/.dotfiles/etc/gemrc ~/.gemrc
ln -vfs ~/.dotfiles/etc/irbrc ~/.irbrc

# SCREEN
ln -vfs ~/.dotfiles/etc/screenrc ~/.screenrc

# GIT
ln -vfs ~/.dotfiles/git/.gitconfig ~/.gitconfig
ln -vfs ~/.dotfiles/git/.gitignore ~/.gitignore

# CREATE VIM BACKUP DIR
mkdir -p ~/.backup/vim/swap
