#!/bin/bash 

# BASH PROFILE
ln -vfs ~/dotfiles/bashrc ~/.bashrc
ln -vfs ~/dotfiles/bash/profile ~/.bash_profile

# VIM FILES
ln -vfs ~/dotfiles/vim ~/.vim
ln -vfs ~/dotfiles/vim/vimrc ~/.vimrc
ln -vfs ~/dotfiles/vim/vimrc.local ~/.vimrc.local
ln -vfs ~/dotfiles/vim/gvimrc ~/.gvimc

# GEMRC
ln -vfs ~/dotfiles/etc/gemrc ~/.gemrc 

# CREATE VIM BACKUP DIR
mkdir -p ~/backup/vim/swap 

# SYMLINK AUTOTEST RELEVANT STUFF

ln -vfs ~/dotfiles/autotest/dotfile ~/.autotest
